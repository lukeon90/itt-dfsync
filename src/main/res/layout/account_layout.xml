<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:id="@+id/account_r0"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/dialog_titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="Account konfigurieren / anlegen"/>


    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/account_ri"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_below="@+id/dialog_titel">

        <ImageView android:layout_width="wrap_content"

                   android:layout_height="wrap_content"
                   tools:src="@tools:sample/avatars"/>


    </RelativeLayout>


        <RelativeLayout android:layout_width="match_parent"
                        android:id="@+id/account_r1"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_below="@+id/account_ri">

            <EditText android:layout_width="match_parent"
                      android:hint="Server"
                      android:maxLines="1"
                      android:id="@+id/account_txt_server"
                      android:layout_height="50dp"/>
        </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/account_r2"
                    android:layout_below="@+id/account_r1">

        <EditText android:layout_width="match_parent"
                  android:id="@+id/account_txt_port"
                  android:hint="Port"
                  android:maxLines="1"
                  android:layout_height="50dp"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/account_r3"
                    android:layout_below="@+id/account_r2">

        <CheckBox android:layout_width="wrap_content"
                  android:id="@+id/account_cb_ssl"
                  android:text="SSL-Verbindung)"
                  android:checked="true"
                  android:enabled="true"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/account_r4"
                    android:layout_below="@+id/account_r3">

        <EditText android:layout_width="match_parent"

                  android:id="@+id/account_txt_description"
                  android:hint="GerÃ¤tebeschreibung (zur Identifikation)"
                  android:layout_height="50dp"/>
    </RelativeLayout>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/account_r5"
                    android:layout_below="@+id/account_r4">
        <Button android:layout_width="wrap_content"
                android:id="@+id/account_button_connect"
                android:text="Verbinden"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>